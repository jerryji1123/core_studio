body,
html {
  width: 100%;
  background-color: #000;
}
.bodybox {
  width: 100%;
  height: 100vh;
}
/* home */
.home .content {
  margin-left: 190px;
  padding-right: 30px;
}
.home .content .contxt {
  width: 100%;
}
.home .content .contxt .tit {
  font-size: 4vw;
  color: #fff;
  text-align: left;
  font-weight: bold;
  padding: 30px 0;
}
.home .content .btn-group .btn {
  text-align: left;
  font-size: 3vw;
  color: #fff;
}
.home .content .png img {
  width: 46vw;
}
/* about */
.about .content {
  margin-left: 190px;
  padding-right: 30px;
}
.about .content .tit {
  font-size: 4vw;
  color: #fff;
}
.about .content .aboutbox {
  display: flex;
  justify-content: center;
  align-items: center;
  height: calc(-74vh);
}
.about .content .aboutbox > .btn-group {
  flex-grow: 1;
}
.about .content .png {
  padding-top: 30px;
}
.about .content .png img {
  width: 30vw;
}
.about .content .contxt {
  font-size: 1vw;
  color: #fff;
  padding-left: 84px;
  padding-top: 30px;
}
.about .content .contxt a {
  color: #fff;
  font-size: 12px;
  line-height: 60px;
  padding-right: 120px;
}
.about .content .pngbox {
  padding-top: 60px;
  padding-right: 10vw;
}
.about .content .pngbox img {
  width: 100px;
  height: 100px;
  margin-left: 30px;
}
/* data */
.data .png {
  padding-left: 120px;
  padding-top: 60px;
}
.data .png img {
  max-height: 100%;
  max-width: 160vh;
  width: auto;
  margin: auto;
}
/* detail */
.detail .png {
  padding-left: 120px;
  padding-top: 30px;
}
.detail .back a {
  width: 60px;
  height: 60px;
  display: block;
  text-align: left;
}
.detail .back a img {
  width: 100%;
}
.detail .conpng {
  padding-left: 230px;
}
.detail .conpng .content {
  background: transparent url('../images/mainbj.png') no-repeat top scroll;
  background-size: cover;
  width: 596px;
  height: 331px;
  margin: 120px auto;
}
.detail .conpng .content .png {
  height: 300px;
  padding-left: 0;
  padding-top: 0;
}
.detail .conpng .content .contxt .tit {
  font-size: 30px;
  margin-top: 60px;
  margin-left: 60px;
  color: #fff;
}
.detail .conpng .content .contxt .desc {
  width: 100%;
  font-size: 14px;
  text-align: center;
  color: #fff;
  margin-top: 30px;
}
.detail .conpng .content .contxt .smalltxt {
  font-size: 12px;
  margin: 30px 30px 0 0;
  text-align: right;
  display: block;
  color: #fff;
}
/* main page */
.main {
  background: #000 url('../images/bj.png') no-repeat top scroll;
  background-size: contain;
}
.main .png {
  height: 300px;
}
.main .searchbox .search {
  width: 270px;
  height: 30px;
  border: 2px solid #fff;
  border-radius: 6px;
  margin-right: 30px;
}
.main .searchbox input {
  border-radius: 6px;
  border: none;
  background-color: rgba(0, 0, 0, 0);
  color: #fff;
  padding-left: 10px;
  line-height: 30px;
}
.main .searchbox a {
  width: 30px;
  height: 30px;
}
.main .searchbox a img {
  display: block;
  width: 100%;
}
.main .conline .sure {
  background-color: #ffe33d;
  color: #000;
}
.main .conline .sure em {
  background-color: #000;
}
.main .conline a {
  border: 2px solid #fff;
  color: #fff;
  margin-right: 30px;
  padding: 0 30px;
  font-size: 12px;
  border-radius: 6px;
  line-height: 30px;
  display: inline-block;
  margin-bottom: 30px;
  text-align: center;
  font-weight: bold;
}
.main .conline a em {
  vertical-align: inherit;
  margin-right: 10px;
  width: 6px;
  height: 6px;
  display: inline-block;
  background-color: #fff;
  border-radius: 50%;
}
.main .content {
  margin-right: 30px;
  overflow: hidden;
}
.main .menubtn {
  width: 230px;
  padding-left: 30px;
  padding-top: 60px;
}
.main .menubtn a {
  padding-top: 3vw;
  min-width: 80px;
  min-height: 80px;
  width: 10vw;
  height: 10vw;
  display: block;
  border: 2px solid #fff;
  box-sizing: border-box;
  font-size: 1vw;
  line-height: 200%;
  border-radius: 50%;
  color: #fff;
  vertical-align: middle;
  text-align: center;
  margin: 60px auto;
}
.main .conlist {
  width: calc(-160%);
}
.main .conlist .choose {
  margin: 30px 0;
  border-bottom: 2px solid #fff;
}
.main .conlist .chooseline {
  width: 100%;
  border-top: 2px solid #fff;
}
.main .conlist .chooseline .choose {
  width: 100%;
  padding-bottom: 30px;
}
.main .conlist .footertxt {
  font-size: 12px;
  text-align: left;
  color: #fff;
}
.main .conlist .swiper-container {
  width: 100%;
}
.main .conlist .swiper-container .swiper-wrapper {
  width: 100%;
}
.main .conlist .swiper-container .swiper-slide {
  overflow: hidden;
}
.main .conlist .swiper-container .swiper-slide a {
  min-width: 110px;
  min-height: 110px;
  width: 12vw;
  height: 12vw;
  border: 4px solid #fff;
  border-radius: 6px;
  overflow: hidden;
  margin: auto;
  display: block;
  box-sizing: border-box;
}
.main .conlist .swiper-container .swiper-slide a i {
  display: none;
}
.main .conlist .swiper-container .swiper-slide a:hover i {
  display: block;
  color: #000;
  background-color: #fff;
  line-height: 100%;
  text-align: center;
  min-height: 110px;
  height: 12vw;
  font-size: 12px;
  font-style: normal;
  font-weight: bold;
  vertical-align: middle;
  line-height: 12vw;
}
.main .conlist .swiper-container .swiper-slide img {
  width: 100%;
}
.topline {
  padding: 30px;
  margin-left: 160px;
}
.topline span {
  text-align: right;
  font-size: 16px;
  color: #fff;
  line-height: 60px;
  display: block;
  margin-right: 120px;
}
.topline p {
  border-bottom: 2px solid #fff;
}
/* leftbar */
.menubox {
  border: 2px solid #000;
  border-radius: 10px;
  width: 116px;
  height: 180px;
  position: fixed;
  left: 30px;
  top: 30px;
}
.menubox .menu {
  width: 20px;
  height: 18px;
  position: absolute;
  left: 30px;
  top: 30px;
  display: inline-block;
  background: transparent url(../images/more.png) no-repeat top scroll;
  background-size: contain;
}
.menubox .bar {
  margin-top: 60px;
  display: none;
}
.menubox .bar a {
  font-size: 16px;
  line-height: 40px;
  color: #fff;
  display: block;
  text-align: center;
  transition: all 0.6s;
}
.menubox .bar a:hover {
  transform: scale(1.4);
  color: #ffe33d;
  position: relative;
}
.show.menubox {
  border: 2px solid #fff;
}
.show.menubox .menu {
  width: 20px;
  height: 20px;
  position: absolute;
  left: 30px;
  top: 30px;
  display: inline-block;
  background: transparent url(../images/close.png) no-repeat top scroll;
  background-size: contain;
}
.show.menubox .bar {
  display: block;
}
